<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Request_tab_Fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Request_tab_Fragment">

    <!-- TODO: Update blank fragment layout -->


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_request_list"
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="20dp" />

    <Toolbar
        android:id="@+id/find_friends_appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"></Toolbar>


    <RelativeLayout
        android:id="@+id/myLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/find_friends_appbar_layout"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/simpleTextID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp"
            android:text="Users who send you Friend Request"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />



    </RelativeLayout>

    <!-- display the username-->




</FrameLayout>